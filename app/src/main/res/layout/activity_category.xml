<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카테고리를 하나만 선택해주세요" />

    <Button
        android:id="@+id/btnColiberal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공통 교양"
        ></Button>
    <Button
        android:id="@+id/btnLiberal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핵심 교양"
        ></Button>
    <Button
        android:id="@+id/btnBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학문 기초"
        ></Button>
    <Button
        android:id="@+id/btnMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전공"
        ></Button>
    <Button
        android:id="@+id/btnElective"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자유 선택"
        ></Button>
    <Button
        android:id="@+id/btnGeneralLiberal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일반교양"
        ></Button>
</LinearLayout>